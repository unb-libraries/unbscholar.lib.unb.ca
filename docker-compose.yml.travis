version: '3.6'

services:
  unbscholar.lib.unb.ca:
    build:
      context: .
      args:
        - COMPOSER_DEPLOY_DEV=dev
    restart: always
    container_name: unbscholar.lib.unb.ca
    expose:
      - "80"
    networks:
      - unbscholar.lib.unb.ca
    ports:
      - "3102:80"

networks:
  unbscholar.lib.unb.ca:
    name: unbscholar.lib.unb.ca
